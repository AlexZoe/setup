root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.frag]
charset = utf-8
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.md]
charset = utf-8
trim_trailing_whitespace = false
indent_style = tab
indent_size = 4

[*{cpp,hpp}]
charset = utf-8
max_line_length = 80
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*{c,h}]
charset = utf-8
max_line_length = 80
trim_trailing_whitespace = true
indent_style = tab
indent_size = 8

[*.tcl]
charset = utf-8
max_line_length = 80
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[Makefile*]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 80

[*{sv,v,vhd}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 80

[*.vim]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.rb]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.yml]
indent_style = space
indent_size = 2
